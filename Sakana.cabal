cabal-version:      2.4
name:               M-Sakana
version:            0.1.1.0

-- A short (one-line) description of the package.
synopsis: A publishing fork of a project I own under a different name.

-- A longer description of the package.
description: See README.md

-- A URL where users can report bugs.
-- bug-reports:

-- The license under which the package is released.
license: GPL-3.0-or-later
author:             MonawaSensei
maintainer:         monawasensei@gmail.com

-- A copyright notice.
-- copyright:
-- category:
extra-source-files: CHANGELOG.md

executable Sakana
    main-is:          Main.hs

    --Modules included in this executable, other than Main.
    other-modules:
        Lexer
        ExecutionTree
        SyntaxTree
        Exception.Base
        SyntaxTree
        Token.Bracket
        Token.Control
        Token.Data
        Token.Keyword
        Token.Operator
        Token.Util.Like
        Token.Util.NestedCollapsible
        Token.Util.String
        Token.Util.Tree
        Token.Util.EagerCollapsible
        Token.Util.CollapsibleTerminalCases


    -- LANGUAGE extensions used by modules in this package.
    other-extensions: MagicHash
    -- other-extensions:
    build-depends:    
        base >= 4.8.0.0
      , ghc-prim >= 0.5.0
      --, tasty >= 0.7 && < 1.4.1
      --, tasty-hunit ^>=0.10.0.3
    hs-source-dirs:   app
                      app/Token
                      app/Token/Util
                      Test
    default-language: Haskell2010

executable SakanaST
    main-is: PTIO.hs
    other-modules:
        Lexer,
        SyntaxTree,
        Exception.Base,
        Token.Control,
        Token.Bracket,
        Token.Data,
        Token.Keyword,
        Token.Operator,
        Token.Util.EagerCollapsible,
        Token.Util.Like,
        Token.Util.NestedCollapsible,
        Token.Util.String,
        Token.Util.Tree,
        Token.Util.CollapsibleTerminalCases
    build-depends:
        base >= 4.8.0.0
        , ghc-prim >= 0.5.0
        , tasty >= 0.7 && < 1.4.1
        , tasty-hunit ^>=0.10.0.3
    hs-source-dirs: app
                    app/Token
                    app/Token/Util
                    Test
    default-language: Haskell2010

test-suite TreeInterpreter
    default-language:
        Haskell2010
    type:
        exitcode-stdio-1.0
    hs-source-dirs:
        Test
        app
    main-is:
        TreeInterpreterTest.hs
    other-modules:
    build-depends:
        base >= 4.8.0.0
      , ghc-prim >= 0.5.0 
      , tasty >= 0.7 && < 1.4.1
      , tasty-hunit ^>=0.10.0.3

test-suite Token_Util_EagerCollapsible
    default-language:
        Haskell2010
    type:
        exitcode-stdio-1.0
    hs-source-dirs:
        Test
        app
    main-is:
        EagerCollapsibleTest.hs
    other-modules:
        Token.Util.EagerCollapsible,
        Token.Util.CollapsibleTerminalCases
    build-depends:
        base >= 4.8.0.0
      , tasty >= 0.7 && < 1.4.1
      , tasty-hunit ^>=0.10.0.3

